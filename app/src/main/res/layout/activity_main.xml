<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/admin_control"
                    android:textColor="@color/admin_text_color"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/addNotice"
                        android:layout_width="@dimen/_100mdp"
                        android:layout_height="@dimen/_115mdp"
                        android:layout_margin="10dp"
                        android:elevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/background_color"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_50mdp"
                                android:layout_height="@dimen/_50mdp"
                                android:background="@drawable/mycircle_green"
                                android:contentDescription="@string/todo1"
                                android:padding="15dp"
                                android:src="@drawable/ic_notice" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/light_gray" />

                            <TextView
                                android:id="@+id/uploadNoticeId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:padding="5dp"
                                android:text="@string/upload_notice"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8font_mdp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/addGalleryImage"
                        android:layout_width="@dimen/_100mdp"
                        android:layout_height="@dimen/_115mdp"
                        android:layout_margin="10dp"
                        android:elevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/background_color"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_50mdp"
                                android:layout_height="@dimen/_50mdp"
                                android:background="@drawable/mycircle_yellow"
                                android:contentDescription="@string/todo1"
                                android:padding="15dp"
                                android:src="@drawable/ic_gallery" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/light_gray" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:padding="5dp"
                                android:text="@string/upload_image"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8font_mdp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UselessParent">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/addFaculty"
                    android:layout_width="@dimen/_100mdp"
                    android:layout_height="@dimen/_115mdp"
                    android:layout_margin="10dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/background_color"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50mdp"
                            android:layout_height="@dimen/_50mdp"
                            android:background="@drawable/mycircle_pink"
                            android:contentDescription="@string/todo1"
                            android:padding="15dp"
                            android:src="@drawable/ic_group" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/light_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="@string/update_faculty"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8font_mdp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/addDelete"
                    android:layout_width="@dimen/_100mdp"
                    android:layout_height="@dimen/_115mdp"
                    android:layout_margin="10dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/background_color"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50mdp"
                            android:layout_height="@dimen/_50mdp"
                            android:background="@drawable/mycircle_red"
                            android:contentDescription="@string/todo1"
                            android:padding="15dp"
                            android:src="@drawable/ic_delete" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/light_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="@string/delete_event"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8font_mdp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/addAutoImage"
                    android:layout_width="@dimen/_100mdp"
                    android:layout_height="@dimen/_115mdp"
                    android:layout_margin="10dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/background_color"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50mdp"
                            android:layout_height="@dimen/_50mdp"
                            android:background="@drawable/mycircle_yellow"
                            android:contentDescription="@string/todo1"
                            android:padding="15dp"
                            android:src="@drawable/ic_gallery" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/light_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="@string/auto_slider_image"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8font_mdp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/deleteImage"
                    android:layout_width="@dimen/_100mdp"
                    android:layout_height="@dimen/_115mdp"
                    android:layout_margin="10dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/background_color"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50mdp"
                            android:layout_height="@dimen/_50mdp"
                            android:background="@drawable/circle_beautiful"
                            android:contentDescription="@string/todo1"
                            android:padding="15dp"
                            android:src="@drawable/ic_delete" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/light_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="@string/delete_image"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8font_mdp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/deleteAutoImageCard"
                    android:layout_width="@dimen/_100mdp"
                    android:layout_height="@dimen/_115mdp"
                    android:layout_margin="10dp"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/background_color"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_50mdp"
                            android:layout_height="@dimen/_50mdp"
                            android:background="@drawable/circle_beautiful"
                            android:contentDescription="@string/todo1"
                            android:padding="15dp"
                            android:src="@drawable/ic_delete" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/light_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                            android:text="Delete auto image"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_8font_mdp"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <Button
                android:id="@+id/Logoutme"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:text="Logout"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>



